    "@react-aria/switch": "^3.1.1",
    "@react-aria/textfield": "^3.2.1",
    "@react-types/button": "^3.2.1",
    "@sajari/react-sdk-utils": "^1.0.0-alpha.13",
    "@types/classnames": "^2.2.11",
    "classnames": "^2.2.6",
    "color": "^3.1.3",
