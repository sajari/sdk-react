{
  "name": "@sajari/react-hooks",
  "version": "1.0.0-alpha.0",
  "description": "Easy to use hooks that allow you to build a powerful search interface powered by Sajari using any component library.",
  "scripts": {
    "start": "tsdx watch --tsconfig tsconfig.build.json --verbose --noClean",
    "build": "tsdx build --tsconfig tsconfig.build.json",
    "test": "jest",
    "test:ci": "jest --env=jsdom --coverage --watchAll=false --maxWorkers=2",
    "prepublish": "yarn build"
  },
  "main": "dist/index.js",
  "module": "dist/hooks.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "README.md",
    "dist"
  ],
  "dependencies": {
    "@sajari/sdk-js": "next",
    "js-cookie": "^2.2.1",
    "@sajari/react-sdk-utils": "^1.0.0-alpha.0",
    "tslib": "^2.0.3"
  },
  "devDependencies": {
    "@types/js-cookie": "^2.2.6"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
