{
  "name": "mono",
  "private": true,
  "devDependencies": {
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@testing-library/dom": "^7.24.4",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@types/jest": "^26.0.14",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "babel-jest": "^26.5.2",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-airbnb-typescript": "^11.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.3",
    "eslint-plugin-react-hooks": "^4.0.0",
    "husky": "^4.3.0",
    "jest": "^26.5.0",
    "lerna": "^3.15.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "tsdx": "^0.13.2",
    "typescript": "^3.9.7"
  },
  "scripts": {
    "lerna": "lerna",
    "clean": "lerna clean",
    "start": "lerna run start --stream --parallel --scope={@sajari/react-components,@sajari/react-hooks,@sajari/react-sdk}",
    "test": "lerna exec --scope={@sajari/react-components,@sajari/react-hooks,@sajari/react-sdk} -- yarn test",
    "test:ci": "lerna exec --scope={@sajari/react-components,@sajari/react-hooks,@sajari/react-sdk} -- yarn test:ci",
    "build": "lerna run build --scope={@sajari/react-components,@sajari/react-hooks,@sajari/react-sdk}",
    "prepublish": "lerna run prepublish",
    "docs": "lerna exec --scope=sajari-sdk-docs -- yarn dev",
    "build:docs": "lerna exec --scope=sajari-sdk-docs -- yarn build",
    "format": "prettier -c --write \"*/**\"",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,yml,yaml,ts,tsx,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
